@model AssignRoleViewModel
@{
    ViewData["Title"] = "Assign Role to User";
    List<RoleViewModel> roles = ViewBag.ApplicationRoles;
    var roleList = new SelectList(roles, "RoleName", "RoleName");
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header bg-info text-white">
                <h4 class="mb-0">
                    <i class="bi bi-person-badge"></i> Assign Role to User
                </h4>
            </div>
            <div class="card-body">
                <form asp-action="AssignRole" method="post">
                    <div class="form-group mb-3">
                        <label asp-for="UserEmail" class="form-label fw-bold">Select User</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-envelope"></i>
                            </span>
                            <input type="email" class="form-control" asp-for="UserEmail" placeholder="user@example.com" />
                        </div>
                        <span asp-validation-for="UserEmail" class="text-danger small"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label for="roleList" class="form-label fw-bold">Select Role</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-shield-check"></i>
                            </span>
                            <select asp-items="roleList" name="RoleName" id="roleList" class="form-select">
                                <option value="">-- Select Role --</option>
                            </select>
                        </div>
                        <span asp-validation-for="RoleName" class="text-danger small"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-check-circle"></i> Assign Role
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<br>
<br>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}