@model List<RoleViewModel>

<div class="row">
    <div class="col-12">
        <div class="card shadow">
            <div class="card-header bg-dark text-white">
                <h4 class="mb-0">
                    <i class="bi bi-list-task"></i> Role Management
                </h4>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-4">
                                    <i class="bi bi-key"></i> Role Name
                                </th>
                                <th>
                                    <i class="bi bi-card-text"></i> Description
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var role in Model)
                            {
                                <tr>
                                    <td class="ps-4 fw-semibold">
                                        <span class="badge bg-primary rounded-pill p-2">@role.RoleName</span>
                                    </td>
                                    <td>
                                        @role.RoleDescription
                                    </td>
                                    
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer bg-light">
                <div class="row">
                    <div class="col">
                        <small class="text-muted">
                            <i class="bi bi-info-circle"></i> Total Roles: @Model.Count
                        </small>
                    </div>
                   
                </div>
            </div>
        </div>
    </div>
</div>

