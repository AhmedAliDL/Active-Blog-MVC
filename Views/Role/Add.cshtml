@model RoleViewModel

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Create New Role</h4>
            </div>
            <div class="card-body">
                <form action="Add" method="post">
                    <div class="form-group mb-3">
                        <label asp-for="RoleName" class="form-label fw-bold">Role Name</label>
                        <input type="text" class="form-control" asp-for="RoleName" placeholder="Enter role name" />
                        <span asp-validation-for="RoleName" class="text-danger small"></span>
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="RoleDescription" class="form-label fw-bold">Role Description</label>
                        <input type="text" class="form-control" asp-for="RoleDescription" placeholder="Enter role description" />
                        <span asp-validation-for="RoleDescription" class="text-danger small"></span>
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="bi bi-plus-circle"></i> Add Role
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<br>
<br>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}